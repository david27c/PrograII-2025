<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pastel_green"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".fragments.ProfileFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Perfil"
        android:textColor="@color/dark_gray"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/profile_image_view_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_default_profile"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_shape"
        android:contentDescription="Foto de perfil del usuario"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de Usuario"
        android:textColor="@color/dark_gray"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/profile_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="correo@ejemplo.com"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/profile_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono: N/A"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/profile_reports_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportes Enviados: 0"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:backgroundTint="@color/strong_pastel_blue"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="12dp"/>

</LinearLayout>