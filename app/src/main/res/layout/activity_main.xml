<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

 <EditText
     android:id="@+id/txtCodigo"
     android:hint="@string/c_digo"
     android:layout_marginTop="20dp"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="20dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>
 <EditText
     android:id="@+id/txtDescripcion"
     android:hint="@string/descripci_n"
     android:layout_below="@id/txtCodigo"
     android:layout_marginTop="20dp"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="20dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>
 <EditText
     android:id="@+id/txtMarca"
     android:hint="@string/marca"
     android:layout_below="@id/txtDescripcion"
     android:layout_marginTop="20dp"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="20dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>
 <EditText
     android:id="@+id/txtPresentacion"
     android:hint="@string/presentacion"
     android:layout_below="@id/txtMarca"
     android:layout_marginTop="20dp"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="20dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>
 <EditText
     android:id="@+id/txtPrecio"
     android:hint="@string/precio"
     android:layout_below="@id/txtPresentacion"
     android:layout_marginTop="20dp"
     android:layout_marginLeft="20dp"
     android:layout_marginRight="20dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>
 <ImageButton
     android:id="@+id/imgfotoBebida"
     android:layout_below="@id/txtPrecio"
     android:layout_marginTop="20dp"
     android:layout_centerHorizontal="true"
     android:src="@mipmap/ic_launcher_round"
     android:layout_width="100dp"
     android:layout_height="100dp"/>
 <Button
     android:id="@+id/btnGuardarBebida"
     android:contentDescription="@string/todo"
     android:text="@string/guardar_bebida"
     android:layout_below="@id/imgfotoBebida"
     android:layout_marginTop="20dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>


 <com.google.android.material.floatingactionbutton.FloatingActionButton
     android:id="@+id/fabListaBebidas"
     android:contentDescription="@string/todo"
     android:src="@android:drawable/ic_menu_revert"
     android:layout_alignParentBottom="true"
     android:layout_alignParentEnd="true"
     android:layout_margin="20dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>
</RelativeLayout>