<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/fondo"
    tools:context=".MainActivity">

 <!-- Campos organizados en vertical -->
 <LinearLayout
     android:id="@+id/layoutCampos"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">

  <!-- Código -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginBottom="10dp">
   <TextView
       android:id="@+id/lblCod"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/codigo"
       android:textColor="@color/textoEncabezado"
       android:textSize="15sp" />
   <EditText
       android:id="@+id/txtCodigo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="@string/prov0001"
       android:inputType="TODO"
       android:textColor="@color/textoBase"
       android:textColorHint="@color/textoBase" />
  </LinearLayout>

  <!-- Descripción -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginBottom="10dp">
   <TextView
       android:id="@+id/lblDescripcion"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Descripcion"
       android:textColor="@color/textoEncabezado"
       android:textSize="15sp" />
   <EditText
       android:id="@+id/txtDescripcion"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Gaseosa"
       android:textColor="@color/textoBase"
       android:textColorHint="@color/textoBase" />
  </LinearLayout>

  <!-- Presentación -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginBottom="10dp">
   <TextView
       android:id="@+id/lblPresentacion"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Presentacion"
       android:textColor="@color/textoEncabezado"
       android:textSize="15sp" />
   <EditText
       android:id="@+id/txtPresentacion"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Botella"
       android:textColor="@color/textoBase"
       android:textColorHint="@color/textoBase" />
  </LinearLayout>

  <!-- Marca -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginBottom="10dp">
   <TextView
       android:id="@+id/lblMarca"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Marca"
       android:textColor="@color/textoEncabezado"
       android:textSize="15sp" />
   <EditText
       android:id="@+id/txtMarca"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Coca Cola"
       android:textColor="@color/textoBase"
       android:textColorHint="@color/textoBase" />
  </LinearLayout>

  <!-- Precio -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
   <TextView
       android:id="@+id/lblPrecio"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Precio"
       android:textColor="@color/textoEncabezado"
       android:textSize="15sp" />
   <EditText
       android:id="@+id/txtPrecio"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="2.00"
       android:textColor="@color/textoBase"
       android:textColorHint="@color/textoBase" />
  </LinearLayout>
 </LinearLayout>

 <!-- Botones y fotos debajo -->
 <ImageButton
     android:id="@+id/imgFotoProducto"
     android:layout_width="100dp"
     android:layout_height="100dp"
     android:layout_below="@id/layoutCampos"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="30dp"
     android:src="@mipmap/ic_launcher_round"
     android:contentDescription="Foto del producto" />

 <ImageButton
     android:id="@+id/imgFotoProducto2"
     android:layout_width="100dp"
     android:layout_height="100dp"
     android:layout_below="@id/imgFotoProducto"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="10dp"
     android:src="@mipmap/ic_launcher_round"
     android:visibility="gone"
     android:contentDescription="Foto del producto 2" />

 <ImageButton
     android:id="@+id/imgFotoProducto3"
     android:layout_width="100dp"
     android:layout_height="100dp"
     android:layout_below="@id/imgFotoProducto2"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="10dp"
     android:src="@mipmap/ic_launcher_round"
     android:visibility="gone"
     android:contentDescription="Foto del producto 3" />

 <TextView
     android:id="@+id/lblFoto"
     android:layout_width="80dp"
     android:layout_height="wrap_content"
     android:layout_below="@id/imgFotoProducto3"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="10dp"
     android:text="Imagen"
     android:textAlignment="center"
     android:textColor="@color/textoEncabezado" />

 <TextView
     android:id="@+id/lblPosicion"
     android:layout_width="80dp"
     android:layout_height="wrap_content"
     android:layout_below="@id/lblFoto"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="5dp"
     android:text="1 de 3"
     android:textAlignment="center"
     android:textColor="@color/textoEncabezado" />

 <Button
     android:id="@+id/btnAtras"
     android:layout_width="110dp"
     android:layout_height="48dp"
     android:layout_below="@id/lblPosicion"
     android:layout_alignParentStart="true"
     android:layout_marginTop="10dp"
     android:layout_marginStart="5dp"
     android:text="@string/atras" />

 <Button
     android:id="@+id/btnAdelante"
     android:layout_width="110dp"
     android:layout_height="48dp"
     android:layout_below="@id/lblPosicion"
     android:layout_alignParentEnd="true"
     android:layout_marginTop="10dp"
     android:layout_marginEnd="5dp"
     android:text="@string/adelante" />

 <Button
     android:id="@+id/btnGuardarProducto"
     android:layout_width="200dp"
     android:layout_height="50dp"
     android:layout_below="@id/btnAdelante"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="10dp"
     android:text="@string/guardar_producto" />

 <com.google.android.material.floatingactionbutton.FloatingActionButton
     android:id="@+id/fabListaProductos"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_alignParentEnd="true"
     android:layout_margin="20dp"
     android:contentDescription="Ir a la lista de productos"
     app:srcCompat="@android:drawable/ic_menu_revert" />
</RelativeLayout>