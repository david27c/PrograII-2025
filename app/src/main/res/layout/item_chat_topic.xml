<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/topic_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chat"
            android:contentDescription="Icono del tema"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/topic_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tema: Baches en la calle"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/last_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Último mensaje: ¡Ya lo están reparando!"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/unread_messages_count_tv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_shape_red"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>