<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="150dp"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imgFotoAdaptador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/lblCodigoAdaptador"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:text="@string/c_digo_123"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lblDescripcionAdaptador"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:text="@string/descripci_n_jugo_de_naranja"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="VisualLintOverlap" />
    <TextView
        android:id="@+id/lblMarcaAdaptador"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:text="@string/marca_naranja_s_a"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lblPresentacionAdaptador"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:text="@string/presentacion_500ml"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="VisualLintOverlap" />
    <TextView
        android:id="@+id/lblPrecioAdaptador"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:text="@string/precio_1_99"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>